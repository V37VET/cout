#include <iostream>
#include <string>
using namespace std;

int main() {
    string s = "AaBbCcDd";
    string u, l;
    
    for (char c : s) {
        if (isupper(c)) u += c;
        if (islower(c)) l += c;
    }
    
    cout << "Заглавные: " << u << endl;
    cout << "Строчные: " << l << endl;
    
    return 0;
}
